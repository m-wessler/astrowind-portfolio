---
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <slot name="navbar" />
    <main class="max-w-4xl mx-auto p-6">
      <slot />
    </main>
  </body>
</html>
