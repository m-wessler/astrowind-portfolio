---
const { title, subtitle, image } = Astro.props;
---
<section class="flex flex-col md:flex-row items-center gap-8 bg-gray-100 p-8 rounded-lg">
  <div class="flex-1">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <p class="text-lg text-gray-700 mb-6">{subtitle}</p>
    <a href="/about" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Learn More</a>
  </div>
  <div class="flex-1">
    <img src={image} alt="Hero image" class="rounded-lg shadow-lg" />
  </div>
</section>
