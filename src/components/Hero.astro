---
const { title, subtitle, image } = Astro.props;
---
<section class="flex flex-col md:flex-row items-center gap-8 bg-gray-100 dark:bg-gray-800 p-8 rounded-lg transition-colors">
  <div class="flex-1">
    <h1 class="text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">{title}</h1>
    <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">{subtitle}</p>
    <a href="/about" class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors">Learn More</a>
  </div>
  <div class="flex-1">
    <img src={image} alt="Hero image" class="rounded-lg shadow-lg" />
  </div>
</section>
